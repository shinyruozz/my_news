<div class="news-item type-3" data-page="{{pageNum}}" data-index="{{index}}">
    <div class="main">
        <div class="news-title">
            <h3>{{title}}</h3>
        </div>
        <div class="news-pic">
            <div class="pic-item">
                <img src="{{thumbnail_pic_s}}" alt="" />
            </div>
            <div class="pic-item">
                <img src="{{thumbnail_pic_s02}}" alt="" />
            </div>
            <div class="pic-item">
                <img src="{{thumbnail_pic_s03}}" alt="" />
            </div>
        </div>
    </div>

    <div class="info">
        <span class="author">{{author_name}}</span>
        <span class="time">{{date}}</span>
    </div>
</div>